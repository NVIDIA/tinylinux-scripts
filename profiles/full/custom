install_into tiny/conf.d boot
install_package =python-2.7* "threads xml" "--nodeps"
USE=ithreads emerge --quiet --usepkg --buildpkg =perl-5.20* # Enable ithreads
install_package perl-cleaner "" "--nodeps" # PERL pulls this, and this in turn pulls too much
install_package perl "ithreads"
install_package iasl
install_package pmtools
install_package sys-devel/gdb
install_package dev-util/strace "aio"
install_package alsa-utils "ncurses libsamplerate"
remove_gentoo_services alsasound

# PERL modules
echo "dev-perl/Getopt-Long-Descriptive ~*" >> /etc/portage/package.keywords/full
echo "perl-core/threads ~*" >> /etc/portage/package.keywords/full
echo "perl-core/threads-shared ~*" >> /etc/portage/package.keywords/full
echo "<virtual/perl-threads-1.9 ~*" >> /etc/portage/package.keywords/full
install_package dev-perl/JSON
install_package dev-perl/Getopt-Long-Descriptive
install_package perl-core/File-Path
install_package perl-core/threads-shared
install_package perl-core/Time-HiRes
install_package perl-cleaner "" "--unmerge"

install_package net-misc/curl
remove_gentoo_services pydoc-2.7
[[ -f "$NEWROOT/usr/bin/python-wrapper" ]] || (
    cd "$NEWROOT/usr/bin"
    ln -s python2 python-wrapper
)
[[ -f "$NEWROOT/usr/bin/emacs" ]] || (
    cd "$NEWROOT/usr/bin"
    ln -s emacs-* emacs
)
