install_into tiny/conf.d boot
install_package =python-2.7* "threads xml" "--nodeps --usepkg --buildpkg"
USE=ithreads emerge --quiet --usepkg --buildpkg =perl-5.20* # Enable ithreads
install_package =perl-5.20* "ithreads" "--usepkg --buildpkg"
install_package iasl "" "--usepkg --buildpkg"
install_package pmtools "" "--usepkg --buildpkg"
install_package sys-devel/gdb "" "--usepkg --buildpkg"
install_package dev-util/strace "aio" "--usepkg --buildpkg"
install_package alsa-utils "ncurses libsamplerate" "--usepkg --buildpkg"
remove_gentoo_services alsasound

# PERL modules
echo "dev-perl/Getopt-Long-Descriptive ~*" >> /etc/portage/package.keywords/full
echo "perl-core/threads ~*" >> /etc/portage/package.keywords/full
echo "perl-core/threads-shared ~*" >> /etc/portage/package.keywords/full
echo "<virtual/perl-threads-1.9 ~*" >> /etc/portage/package.keywords/full
install_package dev-perl/JSON "" "--usepkg --buildpkg"
install_package dev-perl/Getopt-Long-Descriptive "" "--usepkg --buildpkg"
install_package perl-core/File-Path "" "--usepkg --buildpkg"
install_package perl-core/threads-shared "" "--usepkg --buildpkg"
install_package perl-core/Time-HiRes "" "--usepkg --buildpkg"

install_package net-misc/curl "" "--usepkg --buildpkg"
remove_gentoo_services pydoc-2.7
[[ -f "$NEWROOT/usr/bin/python-wrapper" ]] || (
    cd "$NEWROOT/usr/bin"
    ln -s python2 python-wrapper
)
[[ -f "$NEWROOT/usr/bin/emacs" ]] || (
    cd "$NEWROOT/usr/bin"
    ln -s emacs-* emacs
)
