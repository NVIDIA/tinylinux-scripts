LOUDSERVICE="1"

start()
{
    # Execute commands from the command file
    if [ -f "$TINYLINUXDIR/commands" ]; then
        tr -d '\r' <"$TINYLINUXDIR/commands" >/commands
        chmod a+x /commands
        if [ "$(uname -m)" = "x86_64" ]; then
            /usr/bin/getty -n -l /usr/bin/commands_login 38400 tty1 linux
        else
            /commands
        fi
    fi
}
